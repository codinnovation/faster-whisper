# Environment variables configuration

# Model Configuration
MODEL_SIZE=base  # Options: tiny, base, small, medium, large-v2, large-v3
DEVICE=cpu       # Options: cpu, cuda
COMPUTE_TYPE=int8  # Options: int8, float16, float32

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=100
WORKERS=4

# Rate Limiting (per IP)
# Configured in api.py - modify as needed

# Celery Worker Configuration
CELERY_CONCURRENCY=2
CELERY_MAX_TASKS_PER_CHILD=50

# Docker Compose Configuration
# Set these before running docker-compose up
COMPOSE_PROJECT_NAME=whisper-api
